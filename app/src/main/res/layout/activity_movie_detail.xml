<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="eu.captaincode.popularmovies.model.Movie" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/cl_main_movie_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="eu.captaincode.popularmovies.MovieDetailActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/abl_main_movie_detail"
            style="@style/appbarLayout">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/ctl_main_movie_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/collapsing_toolbar_height"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleTextAppearance="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/iv_movie_detail_backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/collapsing_toolbar_height"
                    android:scaleType="centerCrop"
                    android:src="@drawable/poster_placeholder"
                    app:layout_collapseMode="parallax"
                    tools:ignore="ContentDescription" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_movie_detail"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:title="@{movie.title}" />

            </android.support.design.widget.CollapsingToolbarLayout>
            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="bottom"
                android:background="#00000000"
                app:layout_anchor="@+id/abl_main_movie_detail"
                app:layout_anchorGravity="bottom"
                app:layout_collapseMode="none"
                app:tabGravity="fill"
                app:tabIndicatorColor="#fff"
                app:tabIndicatorHeight="2dp"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="#fff"
                app:tabTextColor="#fff" />

        </android.support.design.widget.AppBarLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            style="@style/FabStyle"
            android:onClick="onFabClick"
            app:layout_anchor="@id/abl_main_movie_detail"
            app:layout_anchorGravity="bottom|right|end" />

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="@dimen/main_container_padding"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <View
                    android:id="@+id/divider_movie_detail"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/movie_detail_poster_padding"
                    android:layout_marginTop="@dimen/movie_detail_poster_padding"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@id/rv_videos_movie_detail" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_reviews_movie_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_bottom_rv"
                    app:layout_constraintTop_toBottomOf="@id/divider_movie_detail">

                </android.support.v7.widget.RecyclerView>

            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
</layout>