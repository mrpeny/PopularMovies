<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_general"
    android:orientation="horizontal">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/iv_video_list_item_thumbnail"
        tools:src="@drawable/poster_placeholder"
        android:contentDescription="@string/fragment_trailers_content_description"
        style="@style/VideoThumbnailImageTrailers" />

    <TextView
        android:id="@+id/tv_video_list_item_name"
        tools:text="Official trailer"
        style="@style/VideoTitleTrailers" />
</LinearLayout>
