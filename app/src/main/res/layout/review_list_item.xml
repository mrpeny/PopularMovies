<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_general_fragments"
    android:paddingBottom="@dimen/padding_general_fragments">

    <TextView
        android:id="@+id/tv_author_review_list_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hamadam"
        style="@style/AuthorTextReviews" />

    <TextView
        android:id="@+id/tv_content_review_list_item"
        app:layout_constraintStart_toStartOf="@+id/tv_author_review_list_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_author_review_list_item"
        tools:text="I like the occasional crossover but when Flash started, and then Supergirl... argh. I don'T watch those other two shows, but somewhere along the way I felt like I had to just to follow along in THIS show."
        style="@style/ContentTextReviews" />
</android.support.constraint.ConstraintLayout>